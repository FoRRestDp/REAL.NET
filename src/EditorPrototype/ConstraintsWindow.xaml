        xmlns:local="clr-namespace:EditorPrototype"
        mc:Ignorable="d"
        Title="ConstraintsWindow" Height="346" Width="490">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
