<Window x:Class="EditorPrototype.ConstraintsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorPrototype"
        mc:Ignorable="d"
        Title="ConstraintsWindow" Height="346" Width="490">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Label Margin="10,10,96,281" RenderTransformOrigin="0.716,1.958" Content="Constraints on:" />
            <ComboBox Margin="10,34,96,257" RenderTransformOrigin="0.716,1.958">
                <ComboBoxItem>Common</ComboBoxItem>
                <ComboBoxItem>Edge</ComboBoxItem>
                <ComboBoxItem>Vertex</ComboBoxItem>
            </ComboBox>
            <Label Margin="10,63,96,228" RenderTransformOrigin="0.716,1.958" Content="Item:" />

        </Grid>

        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <Grid Grid.Column="2">
            <!--Constraints list-->
        </Grid>
    </Grid>
</Window>
