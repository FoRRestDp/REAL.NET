<Window
    x:Class="EditorPrototype.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls1="http://schemas.panthernet.ru/graphx/"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:EditorPrototype"
    Title="REAL.NET"
    Width="800"
    Height="670"
    x:ClassModifier="internal"
    mc:Ignorable="d">
  <Grid>
    <Grid.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary Source="/Templates/GeneralTemplate.xaml" />
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </Grid.Resources>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" MinWidth="100" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            BorderThickness="1">
      <controls1:ZoomControl x:Name="g_zoomctrl">
        <wpf:GraphAreaExample x:Name="g_Area" />
      </controls1:ZoomControl>
    </Border>

    <DockPanel Grid.Row="0" Grid.Column="1">
      <Grid x:Name="rightPanel">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" MinHeight="100" />
          <RowDefinition Height="Auto" MinHeight="70" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" MinHeight="100" />
        </Grid.RowDefinitions>

        <Grid x:Name="paletteGrid" Grid.Row="1" />

        <Label
                    x:Name="elementsListLabel"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Content="Elements:" />
        <ListBox
                    x:Name="elementsListBox"
                    Grid.Row="3"
                    Margin="0,20,0,78"
                    HorizontalAlignment="Stretch" />
        <Label
                    x:Name="selectedEntityLabel"
                    Grid.Row="3"
                    HorizontalAlignment="Stretch"
                    Content="Selected entity:" Margin="0,270,0,50" />

        <DataGrid
                    x:Name="attributesView"
                    Grid.Row="3"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding Attributes}" Margin="0,298,0,33" Grid.RowSpan="3">
          <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
            <DataGridTextColumn Binding="{Binding Type}" Header="Type" />
            <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
          </DataGrid.Columns>
        </DataGrid>

        <Grid>
          <Button Content="Constraints"
                            HorizontalAlignment="Left"
                            Margin="0,611,0,-531"
                            VerticalAlignment="Top"
                            Width="118"
                            Click="ConstraintsButtonClick"/>
        </Grid>
      </Grid>
    </DockPanel>

  </Grid>
</Window>
