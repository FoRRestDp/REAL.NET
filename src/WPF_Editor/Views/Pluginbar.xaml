<UserControl
    x:Class="WPF_Editor.Views.Pluginbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <WrapPanel Height="auto" Orientation="Horizontal">
        <Rectangle Width="50" Fill="Green" />
        <Rectangle
            Width="50"
            Height="50"
            Fill="Red" />
        <Rectangle
            Width="50"
            Height="50"
            Fill="Blue" />
        <Rectangle
            Width="50"
            Height="50"
            Fill="Yellow" />
    </WrapPanel>
</UserControl>
